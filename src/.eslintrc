{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle": ["off"],
    "indent": [
      "error",
      2
    ],
    "keyword-spacing": "error",
    "quotes": [
      "warn",
      "single"
    ],
    "no-trailing-spaces": [
      "error", {
        "skipBlankLines": false
      }
    ],
    "eol-last": "error",
    "no-irregular-whitespace": ["error", {
      "skipComments": false
    }],
    "max-len": ["error", {
      "tabWidth": 2
    }],
    "space-infix-ops": ["error", {
      "int32Hint": false
    }]
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
